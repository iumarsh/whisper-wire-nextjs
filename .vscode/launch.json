{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Next.js App",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/.next/**/*.js"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}